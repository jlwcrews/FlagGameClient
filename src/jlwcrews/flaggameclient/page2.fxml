<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jlwcrews.flaggameclient.Page2Controller">
   <children>
      <Pane layoutX="5.0" prefHeight="600.0" prefWidth="600.0">
         <children>
            <Label layoutX="130.0" layoutY="165.0" prefHeight="35.0" text="Choose game difficulty, ">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <RadioButton fx:id="radioButtonEasy" layoutX="131.0" layoutY="283.0" mnemonicParsing="false" onAction="#difficultyChanged" prefHeight="17.0" prefWidth="167.0" text="Easy (Scandinavia)">
               <toggleGroup>
                  <ToggleGroup fx:id="difficultyToggle" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="radioButtonMedium" layoutX="131.0" layoutY="338.0" mnemonicParsing="false" onAction="#difficultyChanged" prefHeight="17.0" prefWidth="167.0" text="Medium (G8 countries)" toggleGroup="$difficultyToggle" />
            <RadioButton fx:id="radioButtonHard" layoutX="131.0" layoutY="394.0" mnemonicParsing="false" onAction="#difficultyChanged" prefHeight="17.0" prefWidth="146.0" text="Hard (Europe)" toggleGroup="$difficultyToggle" />
            <Label fx:id="nameLabel" layoutX="385.0" layoutY="165.0" prefHeight="35.0" text=":">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="startGameButton" layoutX="262.0" layoutY="462.0" mnemonicParsing="false" text="Start Game" />
         </children>
      </Pane>
   </children>
</AnchorPane>
